<% include ../partials/header.ejs %>
<h2>Edit Artist</h2>

<form action='/artists/<%= artist.id %>?_method=PUT' method="POST">
  
  <input type="hidden" name="_method" value="PUT"/>

  <label for="name">Name:</label>
  <input name="name" value='<%= artist.name %>'>

  <label for="photoUrl">Photo URL:</label>
  <input name="photoUrl" value='<%= artist.photoUrl %>'>

  <label for="nationality">Nationality:</label>
  <input name="nationality" value='<%= artist.nationality %>'>

  <label for="instrument">Instrument:</label>
  <input name="instrument" value='<%= artist.instrument %>'>

  <label for="home_address">Home Address:</label>
  <input name="home_address" value='<%= artist.home_address %>'>

  <input type="submit" value="Update">
</form>
<% include ../partials/footer.ejs %>